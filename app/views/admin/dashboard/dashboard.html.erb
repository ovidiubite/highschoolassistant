<h3> Admin Dashboard </h3>

<table class="table">
    <thead>
        <tr class="aling-left">
            <th>DB Tabel</th>
            <th>Data count</th>
            <th>Options</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="aling-left">
        <tr>
            <td>Highschools</td>
            <td><%= Highschool.count %></td>
            <%= form_tag admin_fetch_highschool_data_path, multipart: true do %>
                <td><%= select_tag :year, options_for_select(Date.new(2004).year..Date.today.year), class:"input-control select"%></td>
                <td><%= submit_tag "Fetch data"%></td>
            <% end %>
        </tr>
        <tr>
            <td>Evaluation Results</td>
            <td><%= EvaluationResult.count %></td>
            <%= form_tag admin_import_evaluation_results_path, multipart: true do %>
                <td>
                  <div class="input-control file" data-role="input">
                      <%= file_field_tag "file" %>
                  </div>
                </td>
                <td><%= submit_tag "Process csv"%></td>
            <% end %>
        </tr>
        <tr>
            <td>Admission Results</td>
            <td><%= AdmissionResult.count %></td>
            <%= form_tag admin_import_admission_results_path, multipart: true do %>
                <td>
                  <div class="input-control file" data-role="input">
                      <%= file_field_tag "file" %>
                  </div>
                </td>
                <td><%= submit_tag "Process csv"%></td>
            <% end %>
        </tr>
    </tbody>
</table>
