<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
    <div class="row">
        <%= hidden_field :result, :id, :value => params[:result] if params[:result] %>
        <div class="col-xs-12 col-sm-12 col-md-12 spacer2 spacer3">
              <label>Email</label>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 spacer2">
              <%= f.email_field :email, autofocus: true, class:"form-control"%>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 spacer2 spacer3">
            <label>Name</label>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 spacer2">
            <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 spacer2 spacer3">
            <label>School</label>
            <%= f.text_field :school, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 spacer2 spacer3">
            <label>County</label>
            <%= f.select :county_id, options_from_collection_for_select(County.all, 'id', 'name', f.object.county_id), {}, class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 spacer2 spacer3">
            <label>Password</label>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 spacer2">
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 spacer2 spacer3">
            <label>Password confirmation</label>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 spacer2">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 spacer2 spacer3">
            <%= f.submit "Sign up", class: 'btn btn-primary wide-btn' %>
        </div>
    </div>
<% end %>
