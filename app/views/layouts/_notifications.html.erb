<% unless flash.empty? %>

  <script type="text/javascript">
      toastr.options = {
        "closeButton": true,
        "progressBar": true,
        "positionClass": "toast-bottom-right",
        "preventDuplicates": true,
      }
    <% flash.each do |f| %>
          <% type = f[0].gsub('alert', 'error').gsub('danger', 'error').gsub('notice', 'success') %>
          toastr['<%= type %>']('<%= f[1] %>', '<%= type.capitalize %>');
      <% end %>
  </script>
<% end %>
